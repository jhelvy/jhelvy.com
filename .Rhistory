link_button <- function(
icon = NULL,
text = NULL,
url = NULL
) {
if (!is.null(icon)) {
text <- htmltools::HTML(paste0('<i class="', icon, '"></i> ', text))
}
button <- bsplus::bs_button(
text,
button_type = "primary",
button_size = "small")
return(htmltools::a(href = url, button))
}
